<resources>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--Views styles-->
    <style name="CustomEditText" parent="android:Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/grayLightFont</item>
        <item name="android:textColor">@color/grayFont</item>
        <item name="android:background">@drawable/edit_text_gray_custom</item>

    </style>

    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font14dp</item>

    </style>
    <style name="CustomTextViewGray" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/fontPrimary80</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font14dp</item>
    </style>

    <style name="CustomOrangeButton" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_orange_custom</item>
        <item name="android:textSize">@dimen/font18dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
