<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="@dimen/padding8dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_otp"
        style="@style/CustomEditText"
        android:background="@drawable/edit_text_white_custom"
        android:hint="Enter OTP"
        android:layout_marginLeft="@dimen/margin40dp"
        android:layout_marginRight="@dimen/margin40dp"
        android:inputType="number"
        android:padding="@dimen/padding14dp"
        android:textColor="@color/fontPrimary80"
        android:textColorHint="@color/fontPrimary40"
        android:textSize="@dimen/font17dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin17dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_submit"
            style="@style/CustomOrangeButton"
            android:paddingBottom="@dimen/padding13dp"
            android:paddingLeft="@dimen/padding15dp"
            android:paddingRight="@dimen/padding15dp"
            android:paddingTop="@dimen/padding13dp"
            android:layout_marginRight="@dimen/margin4dp"
            android:ems="6"
            android:background="@drawable/button_green_custom"
            android:text="Submit" />
        <Button
            android:id="@+id/btn_cancel"
            style="@style/CustomOrangeButton"
            android:background="@drawable/button_red_custom"
            android:paddingBottom="@dimen/padding13dp"
            android:paddingLeft="@dimen/padding15dp"
            android:paddingRight="@dimen/padding15dp"
            android:ems="6"
            android:layout_marginLeft="@dimen/margin4dp"
            android:paddingTop="@dimen/padding13dp"
            android:text="Cancel" />
    </LinearLayout>


</LinearLayout>